<h1>Edit Building</h1>

<%= form_with(model: @building, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :height %>
    <%= form.number_field :height %>
  </div>
  
  <div>
    <%= form.submit 'Update Building' %>
  </div>
<% end %>

<%= link_to 'Back to Buildings List', buildings_path %>
